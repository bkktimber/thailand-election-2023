{
	"include": ["src/*.ts"],
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"declaration": true,
		"declarationMap": true,
		"moduleResolution": "node",
		"outDir": "dist",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	}
}
